{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node10",
    "baseUrl": "src/",
    "paths": {
      "@controllers": ["./controllers/index"],
      "@models": ["models/index"],
      "@routes": ["/routes/index"],
      "@utils": ["utils/index"],
      "@helpers": ["helpers/index"]
    },
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
